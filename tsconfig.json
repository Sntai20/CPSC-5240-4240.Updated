{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "target": "es6",
    "moduleResolution" : "node",
    "rootDir": "./",
    "outDir": "./out",
    "sourceMap": true,
    "types":["node", "mocha"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include" : [
    "./src/**/*",
    "./test/**/*",
  ],
  "exclude": [
    "node_modules",
    "./out",
    "References",
  ]
}